<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="@dimen/_80sdp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_80sdp"
        android:background="@drawable/main_layout_corners"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/Ib_darkmood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_moon_line"></ImageButton>

        <ImageButton
            android:id="@+id/ib_lightmood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_icons8_idea"></ImageButton>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_input_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_216sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:text="308*42"
        android:textColor="@color/white"
        android:textSize="@dimen/_24ssp"

        ></TextView>

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_200sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:text="12,936"
        android:textColor="@color/white"
        android:textSize="@dimen/_32ssp"></TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#696969"
        app:cardCornerRadius="@dimen/_20sdp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/calculatordesigning"
            android:scrollbars="horizontal"
            />
    </androidx.cardview.widget.CardView>
</LinearLayout>